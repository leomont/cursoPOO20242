


public class GradeBook {

    private String courseName = "";
    private String instructorName = ""; // a) Variable de instancia para el nombre del instructor

    // Constructor vacío
    public GradeBook() {
    }

    // c) Constructor modificado para aceptar el nombre del curso y el instructor
    public GradeBook(String courseName, String instructorName) {
        this.courseName = courseName;
        this.instructorName = instructorName;
    }

    public String getCourseName() {
        return courseName;
    }

    public void setCourseName(String courseName) {
        this.courseName = courseName;
    }

    // b) Método set para cambiar el nombre del instructor
    public void setInstructorName(String instructorName) {
        this.instructorName = instructorName;
    }

    // b) Método get para obtener el nombre del instructor
    public String getInstructorName() {
        return instructorName;
    }

    // d) Método displayMessage actualizado para mostrar curso e instructor
    public void displayMessage() {
        System.out.println("Curso ingresado: " + getCourseName());
        System.out.println("Este curso es presentado por: " + getInstructorName());
    }
}
